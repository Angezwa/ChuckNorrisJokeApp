<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ChuckNorrisJokeApp.MainPage">

    <StackLayout BackgroundColor="Black">
        <!-- Place new controls here -->
        <Label Text="ChuckNorrisJokes!" TextColor="DarkTurquoise" FontSize="Title" LineBreakMode="MiddleTruncation" FontAttributes="Bold"
           HorizontalOptions="CenterAndExpand"/>
        
        
        <Label x:Name="JokeLabel" HeightRequest="200" TextColor="Aquamarine" FontSize="Medium"/>
        
        <Button x:Name="JokeButton" Text="Get Random Jokes" Clicked="JokeButton_Clicked"
                BackgroundColor="DeepSkyBlue" FontSize="Subtitle" CornerRadius="100"/>
        <Button x:Name="CategoryButton" Text="Catagory" Clicked="CategoryButton_Clicked" 
                BackgroundColor="DeepSkyBlue" FontSize="Subtitle" CornerRadius="100"/>
    </StackLayout>

</ContentPage>
